<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.nesib.yourbooknotes.ui.main.fragments.HomeFragment"
        android:label="Quotes"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_bookProfileFragment"
            app:destination="@id/bookProfileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>
    <dialog
        android:id="@+id/addBookFragment"
        android:name="com.nesib.yourbooknotes.ui.main.fragments.AddBookFragment"
        android:label="Add a new book"
        tools:layout="@layout/fragment_add_book" />
    <dialog
        android:id="@+id/addQuoteFragment"
        android:name="com.nesib.yourbooknotes.ui.main.fragments.AddQuoteFragment"
        android:label="Add new quote"
        tools:layout="@layout/fragment_add_quote">
        <argument
            android:name="book"
            android:defaultValue="@null"
            app:argType="com.nesib.yourbooknotes.models.Book"
            app:nullable="true" />
    </dialog>
    <fragment
        android:id="@+id/bookProfileFragment"
        android:name="com.nesib.yourbooknotes.ui.main.fragments.BookProfileFragment"
        android:label="Book Profile"
        tools:layout="@layout/fragment_book_profile">
        <action
            android:id="@+id/action_bookProfileFragment_to_addQuoteFragment"
            app:destination="@id/addQuoteFragment" />
        <argument
            android:name="bookId"
            app:argType="string" />
        <action
            android:id="@+id/action_bookProfileFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editUserFragment"
        android:name="com.nesib.yourbooknotes.ui.main.fragments.EditUserFragment"
        android:label="Edit profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.nesib.yourbooknotes.ui.main.fragments.SearchFragment"
        android:label="SearchFragment "
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_bookProfileFragment"
            app:destination="@id/bookProfileFragment" />
        <action
            android:id="@+id/action_searchFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_addBookFragment"
        app:destination="@id/addBookFragment" />
    <fragment
        android:id="@+id/selectBookFragment"
        android:name="com.nesib.yourbooknotes.ui.main.fragments.SelectBookFragment"
        android:label="SelectBookFragment"
        tools:layout="@layout/fragment_select_book">
        <action
            android:id="@+id/action_selectBookFragment_to_addQuoteFragment"
            app:destination="@id/addQuoteFragment" />
        <action
            android:id="@+id/action_selectBookFragment_to_addBookFragment"
            app:destination="@id/addBookFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_selectBookFragment"
        app:destination="@id/selectBookFragment" />
    <fragment
        tools:layout="@layout/fragment_my_profile"
        android:id="@+id/myProfileFragment"
        android:name="com.nesib.yourbooknotes.ui.main.fragments.MyProfileFragment"
        android:label="MyProfileFragment" >
        <action
            android:id="@+id/action_myProfileFragment_to_editUserFragment"
            app:destination="@id/editUserFragment" />
        <action
            android:id="@+id/action_myProfileFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_myProfileFragment_to_bookProfileFragment"
            app:destination="@id/bookProfileFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_user_profile"
        android:id="@+id/userProfileFragment"
        android:name="com.nesib.yourbooknotes.ui.main.fragments.UserProfileFragment"
        android:label="UserProfileFragment" >
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment><action android:id="@+id/action_global_myProfileFragment" app:destination="@id/myProfileFragment"/>
</navigation>